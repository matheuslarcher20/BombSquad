mkdir BombSquad_Server
cd BombSquad_Server
echo "BombSquad_Server_Linux_64bit_1.4.123" > /etc/cache_BombSquad_Server.txt
cachesv=$(cat /etc/cache_BombSquad_Server.txt)
wget http://www.files.froemling.net/bombsquad/builds/$cachesv.tar.gz
if [ -d /root/BombSquad_Server/$cachesv.tar.gz]
then
echo -e "\033[05;31m Erro!! O arquivo foi atualizado ou não existe!! \033[0m"
exit
else
echo ""
fi
apt-get update
sudo apt-get install python2.7 libsdl2-2.0 -y
wget http://www.files.froemling.net/bombsquad/builds/$cachesv.tar.gz
tar -zxvf $cachesv.tar.gz
rm BombSquad*.tar.gz 2> /dev/null
rm /etc/localtime && ln -s /usr/share/zoneinfo/America/Sao_Paulo /etc/localtime
chmod 755 -R $cachesv
apt-get install -y git
git clone https://github.com/matheuslarcher20/BombSquad.git
cd BombSquad
for arqs in `ls`
do
rm /bin/$arqs 2>/dev/null
mv $arqs /bin
chmod +x /bin/$arqs
done
cd 
rm -rf install 2> /dev/null
rm -rf BombSquad 2> /dev/null
echo -e "\033[1;32mInstalação concluida!!\033[0m"
